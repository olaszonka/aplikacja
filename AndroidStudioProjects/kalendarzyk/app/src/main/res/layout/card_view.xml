<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="180dp">

    <androidx.cardview.widget.CardView
        android:layout_width="420dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.555">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="437dp"
            android:layout_height="129dp"
            android:background="#FFB4A8">

            <TextView
                android:id="@+id/textTemp"
                android:layout_width="85dp"
                android:layout_height="33dp"
                android:layout_marginStart="48dp"
                android:text="Temperatura"
                app:layout_constraintStart_toEndOf="@+id/textSecretion"
                app:layout_constraintTop_toTopOf="@+id/textSecretion" />

            <TextView
                android:id="@+id/txtBleeding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="12dp"
                android:text="Krwawienie"
                app:layout_constraintBottom_toTopOf="@+id/textView9"
                app:layout_constraintStart_toStartOf="@+id/textView9" />

            <TextView
                android:id="@+id/textSecretion"
                android:layout_width="76dp"
                android:layout_height="34dp"
                android:layout_marginStart="48dp"
                android:text="Śluz"
                app:layout_constraintStart_toEndOf="@+id/textMood"
                app:layout_constraintTop_toTopOf="@+id/textMood" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Temperatura:"
                app:layout_constraintStart_toStartOf="@+id/textTemp"
                app:layout_constraintTop_toTopOf="@+id/textView8" />

            <TextView
                android:id="@+id/textMood"
                android:layout_width="76dp"
                android:layout_height="34dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="32dp"
                android:text="Humor"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textDate" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Śluz:"
                app:layout_constraintStart_toStartOf="@+id/textSecretion"
                app:layout_constraintTop_toBottomOf="@+id/textDate" />

            <TextView
                android:id="@+id/editTextText"
                android:layout_width="70dp"
                android:layout_height="23dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="8dp"
                android:text="Humor:"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textDate" />

            <TextView
                android:id="@+id/textDate"
                android:layout_width="108dp"
                android:layout_height="24dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="16dp"
                android:text="Data"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>